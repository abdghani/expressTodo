


<div ng-controller="todo_controller">
	<div class="row">
		<div class="col-md-8">
			<table class="table table-stripe">
				<thead>
					<th>Serial</th>
					<th>Todo</th>
					<th>Created</th>
					<th>Completed</th>
					<th>&nbsp</th>
				</thead>
				<tbody>
					<tr ng-repeat="todo in todoss">
						<td>{{$index +1}}</td>
						<td>{{todo.content}}</td>
						<td>{{todo.created_at | getTimeOffset}}</td>
						<td>
							<button class="btn btn-info" ng-click="completedTodo(todo._id)">
								Completed
							</button>
						</td>
						<td>
							<button class="btn btn-danger" ng-click="deleteTodo(todo._id)">Delete</button>
						</td>

					</tr>
					<tr>
							<td>
								<input class="form-control" ng-model='data.content'>
							</td>
							<td>
								<button class="btn btn-primary" ng-click="submitTodo(data)">Add</button> 
							</td>	
							<td>
								&nbsp
							</td>	
							<td>
								&nbsp
							</td>			
					</tr>
				</tbody>
			</table>
		</div>
		<div class="col-md-4">
			
			<table class="table">
				<thead>
					<th>Completed</th>
					<th>&nbsp</th>
				</thead>
				<tbody>
					<tr ng-repeat="complete in completed">
						<td>{{complete.content}}</td>
						<td>{{complete.completedTime | getTimeOffset}}</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>